<?xml version='1.0' encoding='utf-8'?>
<widget id="com.maxithings.buplakaNew" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>buplaka</name>
    <description>
    </description>
    <author email="alifaruk@maxithings.com" href="http://maxithings.com">
        MaxiThings Development Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <splash height="300" platform="android" src="res/screen/android/screen.png" width="620" />
        <icon density="mdpi" height="57" platform="android" src="res/icon/icon.png" width="57" />
        <allow-intent href="market:*" />
        <preference name="orientation" value="portrait" />
    </platform>
    <platform name="ios">
        <splash height="300" platform="ios" src="res/screen/android/screen.png" width="620" />
        <icon density="mdpi" height="57" platform="ios" src="res/icon/icon.png" width="57" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
            <string>Kamera bir görüntü yakalamak için izninizi istiyor.</string>
        </edit-config>
    </platform>
    <plugin name="cordova-plugin-camera" spec="^4.0.2" />
    <plugin name="cordova-plugin-dialogs" spec="^2.0.1" />
    <plugin name="cordova-plugin-file-transfer" spec="^1.7.1" />
    <plugin name="cordova-plugin-admob-simple" spec="^3.3.4" />
    <engine name="browser" spec="^5.0.3" />
    <engine name="ios" spec="^4.5.4" />
    <engine name="android" spec="^7.0.0" />
</widget>
